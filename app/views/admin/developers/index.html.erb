<%= render 'admin/shared/simple_header', notice: notice, title: 'Desarrolladores', text_danger: '' %>

<div class="content overflow-hidden mb20">
  <% if @developers.any? %>
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class='background-primary color-white'>
          <th class='text-center'><strong>Nombre</strong></th>
          <th class='text-center'><strong>Email</strong></th>
          <th class='text-center'><strong>Acciones</strong></th>
        </tr>
      </thead>

      <tbody>
        <% @developers.each do |developer| %>
          <tr>
            <td class='text-center'><%= developer.name %></td>
            <td class='text-center'><%= developer.email %></td>
            <td class='text-center'>
              <strong>
                <%= link_to 'Editar', edit_admin_developer_path(developer) %> |
                <%= link_to 'Eliminar', admin_developer_path(developer), method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
              </strong>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No hay desarrolladores</p>
  <% end %>
  <br>
</div>

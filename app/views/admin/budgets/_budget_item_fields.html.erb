<div class="nested-fields">
  <div class="row">
    <div class="form-group field col-md-3">
      <%= f.text_field :title, placeholder: 'Titulo', class: 'form-control' %>
    </div>

    <div class="form-group field col-md-7">
      <%= f.text_field :description, placeholder: 'Descripcion', class: 'form-control' %>
    </div>
    
    <div class="form-group col-md-2">
      <%= link_to_remove_association "Quitar Item", f, class: "btn btn-danger pull-right" %>
    </div>
  </div>
</div>

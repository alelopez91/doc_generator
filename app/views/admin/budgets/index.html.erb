<div class="header">
  <p id="notice"><%= notice %></p>
  <h3>Presupuestos</h3>
</div>

<div class="content overflow-hidden mb20">
  <% if @budgets.any? %>
    <table>
      <thead>
        <tr>
          <th><strong>Cliente</strong></th>
          <th><strong>Proyecto</strong></th>
          <th><strong>Total</strong></th>
          <th><strong>Acciones</strong></th>
        </tr>
      </thead>

      <tbody>
        <% @budgets.each do |budget| %>
          <tr>
            <td><%= budget.client_name %></td>
            <td><%= budget.project_name %></td>
            <td><%= budget.total_amount %></td>
            <td> <%= link_to "PDF", admin_budget_pdf_path(budget, format: :pdf) %> |
            <%= link_to 'Editar', edit_admin_budget_path(budget) %> |
            <%= link_to 'Eliminar', admin_budget_path(budget), method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% else %>
    <p>No hay presupuestos</p>
  <% end %>

  <br>
</div>
